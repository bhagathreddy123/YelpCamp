<% include("partials/header") %>
<div class="row">
  <h1 style="text-align: center;">Create a New Campground</h1>
  <div class="rwd-form">
    <form action="/campgrounds" method="POST">
      <div class="form-group">
        <label for="name">Name</label>
        <input class="form-control" type="text" name="name" placeholder="Yosemite" />
      </div>
      <div class="form-group">
        <label for="image">Image</label>
        <input id="image" type="file" name="image" accept="image/*" />
      </div>
       <div class="form-group">
        <button class="btn btn-md btn-primary btn-block">Submit!</button>
      </div>
    </form>
    
    <a href="/campgrounds">Back</a>
  </div>
</div>
<% include("partials/footer") %>